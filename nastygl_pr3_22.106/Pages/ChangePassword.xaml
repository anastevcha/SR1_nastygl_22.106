<Page x:Class="nastygl_pr3_22._106.Pages.ChangePassword"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:nastygl_pr3_22._106.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChangePassword" Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" Margin="10 100">
            <TextBlock Text="Восстановление пароля" HorizontalAlignment="Center" FontSize="20"/>
            <TextBlock Text="Придумайте новый пароль" HorizontalAlignment="Center" />
            <PasswordBox x:Name="startPassword"/>
            <TextBlock Text="Подтвердите новый пароль" HorizontalAlignment="Center" />
            <PasswordBox x:Name="finishPassword"/>
            <Button x:Name="Enter" Content="Подтвердить" Click="Enter_Click"/>
        </StackPanel>
    </Grid>
</Page>
